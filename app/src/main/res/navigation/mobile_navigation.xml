<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_maps">

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.vtb.hackaton.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.vtb.hackaton.ui.user_profile.ProfileFragment"
        android:label="@string/title_user_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.vtb.hackaton.ui.maps.MapsFragment"
        android:label="@string/title_maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_followed"
        android:name="com.vtb.hackaton.ui.followed.FollowedFragment"
        android:label="@string/title_followed"
        tools:layout="@layout/fragment_followed" />
</navigation>